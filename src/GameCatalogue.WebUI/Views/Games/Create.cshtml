@model GameCatalogue.Application.DTOs.GameDTO

@{
    ViewData["Title"] = "Register new Game";
}

<h2 class="text-success text-title">@ViewData["Title"]</h2>
<hr />
<form asp-action="Create">
    <div class="row">
        <div class="col-md-6 float-left">

            <div class="form-group row mb-2">
                <label asp-for="Name" class="col-md-3 control-label text-form"></label>
                <div class="col-md-8">
                    <input asp-for="Name" class="form-control form-control-sm" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label asp-for="Producer" class="col-md-3 control-label text-form"></label>
                <div class="col-md-8">
                    <input asp-for="Producer" class="form-control form-control-sm" />
                    <span asp-validation-for="Producer" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label asp-for="Gender" class="col-md-3 control-label text-form"></label>
                <div class="col-md-8">
                    <input asp-for="Gender" class="form-control form-control-sm" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>

        </div>

        <div class="col-md-6 float-right">

            <div class="form-group row mb-2">
                <label asp-for="Quantity" class="col-md-3 control-label text-form"></label>
                <div class="col-md-8">
                    <input asp-for="Quantity" class="form-control form-control-sm" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label asp-for="Image" class="col-md-3 control-label text-form"></label>
                <div class="col-md-8">
                    <input asp-for="Image" class="form-control form-control-sm" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label asp-for="PlatformId" class="col-md-3 control-label text-form"></label>
                <div class="col-md-8">
                    <select asp-for="PlatformId" class="form-control form-control-sm"
                        asp-items="ViewBag.PlatformId"></select>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-md-offset-2 col-md-10">
                <button value="Create" class="btn btn-outline-success" title="Create"><i
                        class="fas fa-save buttons-size"></i></button> |
                <a asp-action="Index" class="btn btn-outline-primary" title="Back to List"><i
                        class="fas fa-arrow-left buttons-size"></i></a>
            </div>
        </div>

    </div>

</form>
