@model IEnumerable<GameCatalogue.Application.DTOs.GameDTO>

@{
    ViewData["Title"] = "Games Management";
}
<style>
    .modal-lg {
        max-width: 80%;
    }
</style>
<div>
    <h2 class="text-primary text-title">@ViewData["Title"]</h2>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-outline-success">
                    <span title="Register New" class="fas fa-plus buttons-size"></span>
                </a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="panel panel-default">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th class="table-dark">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="table-dark">
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th class="table-dark">
                    @Html.DisplayNameFor(model => model.Producer)
                </th>
                <th class="table-dark">
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th class="table-dark">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="btn btn-outline-success">
                            <span class="fas fa-edit"></span>
                        </a>

                        <a asp-action="Details" asp-route-id="@item.Id" title="Details" class="btn btn-outline-primary">
                            <span class="fas fa-search"></span>
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="btn btn-outline-danger">
                            <span class="fas fa-trash-alt"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
